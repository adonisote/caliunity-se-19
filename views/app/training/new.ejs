<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>New</title>
  <link rel="stylesheet" href="/public/styles/app.css" />
</head>

<body>
  <header></header>
  <main>
    <div class="new-form">
      <form id="new-log" action="new" method="post">
        <div>
          <h1>Training Plan</h1>
          <label for="type">Workout Type:</label>
          <section>
            <input type="text" id="type" name="type" placeholder="Type" list="typeList" required />
            <datalist id="typeList">
              <option value="legs">Leg Day</option>
              <option value="push">Push Day</option>
              <option value="pull">Pull Day</option>
            </datalist>
          </section>
          <label for="phase">Workout Phase:</label>
          <section>
            <input type="text" id="phase" name="phase" placeholder="Workout Phase" list="phaseList" required />

            <datalist id="phaseList">
              <option value="warm-up">Warm-up</option>
              <option value="strenght">
                Strength Training
              </option>
              <option value="cooldown">Cooldown</option>
            </datalist>
          </section>
          <section>
            <ul>
              <li>
                <label for="exName">Exercise name:</label>
                <input type="text" id="exName" name="exName" required />
              </li>
              <li>
                <label for="exReps">Reps:</label>
                <input type="number" id="exReps" name="exReps" required />
              </li>
              <li>
                <label for="exSets">Sets:</label>
                <input type="number" id="exSets" name="exSets" required />
              </li>
            </ul>
          </section>
        </div>
      </form>
      <section>
        <button type="reset" form="new-log">Reset</button>
        <button type="submit" form="new-log">Create</button>
      </section>
    </div>
  </main>
</body>

</html>